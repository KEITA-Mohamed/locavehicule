{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
    <div class="container mt-5">
    <h1 class="text-center">Mes véhicules</h1>
    <a href="{{ path('app_vehicule_new') }}" class="btn btn-primary mb-4">Nouveau Véhicule</a>
    <a href="{{ path('app_dispo_new') }}" class="btn btn-success mb-4">Définir une disponibilité</a>
    <div class="row g-4">
    {% for vehicule in vehicules %}
        <div class="card me-4" style="width: 18rem;">
            <img src="{{asset('/uploads/vehicules/'~ vehicule.image|default('autodrive.jpg'))}}" height="200" class="card-img-top " alt="...">
            <div class="card-body">
            <h5 class="card-title">Marque: {{vehicule.marque}}</h5>
            <p class="card-text ">Modele: {{vehicule.modele}}</p>
            <div class="d-flex justify-content-between">
            <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-primary">Modifier</a>
            {{ include('vehicule/_delete_form.html.twig') }}
            </div>
            </div>
        </div>
        {% else %}
        <h2>Aucun véhicule trouvé</h2>
    {% endfor %}
   </div>
   </div>
{% endblock %}
